#!/bin/sh
# postinst script for igestis-ajaxplorer
#
# see: dh_installdeb(1)

CACHE_FOLDER="/var/cache/igestis/ajaxplorer"
LOG_FOLDER="/var/log/igestis/Ajaxplorer"
DATA_FOLDER="/var/lib/igestis/ajaxplorer"

MODULE_NAME="Ajaxplorer"

#mkdir -p /usr/share/igestis/modules/Ajaxplorer/ajaxplorer/server
#chown www-data -R /usr/share/igestis/modules/Ajaxplorer/ajaxplorer/

for folder in $CACHE_FOLDER $LOG_FOLDER $DATA_FOLDER; do
    mkdir -p $folder
    chown www-data -R $folder
    chmod 700 -R $folder
done

mkdir -p /var/log/igestis/${MODULE_NAME}/
chown www-data -R /var/log/igestis/${MODULE_NAME}/

## We regenerate the language cache
php /usr/share/igestis/command.php i18n:regen-locales

# Avoid the first assistant
touch /var/cache/igestis/ajaxplorer/diag_result.php

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
