#!/bin/sh
# postinst script for igestis-ajaxplorer
#
# see: dh_installdeb(1)

CACHE_FOLDER="/var/cache/igestis/"
MODULE_NAME="Ajaxplorer"

mkdir -p /usr/share/igestis/modules/Ajaxplorer/ajaxplorer/server
chown www-data -R /usr/share/igestis/modules/Ajaxplorer/ajaxplorer/

# Avoid the first assistant (Only since pydio).
echo "true" > /usr/share/igestis/modules/Ajaxplorer/ajaxplorer/data/cache/first_run_passed

mkdir -p /var/log/igestis/${MODULE_NAME}/
chown www-data -R /var/log/igestis/${MODULE_NAME}/

## We setup the cache folder to the right location
mkdir -p $CACHE_FOLDER
if [ ! -z "$CACHE_FOLDER" ] ; then rm -rf $CACHE_FOLDER/* ; fi

## We regenerate the language cache
php /usr/share/doc/igestis/regenLocales.php /usr/share/igestis
chown www-data -R $CACHE_FOLDER
chmod 700 -R $CACHE_FOLDER

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


