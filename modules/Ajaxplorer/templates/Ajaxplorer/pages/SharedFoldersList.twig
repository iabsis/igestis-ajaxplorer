{% extends "Ajaxplorer/common.twig" %}

{% set title = {
                'title': "Shared folders"|trans,
                'help': "Here you can manage your shared folders and set users' rights."|trans} %}

{% set sidebarActivated = true %}
{% block sidebar %}
  {% include 'sidebar.twig' %}
{% endblock %}

{% block content %}{{ parent() }}
{% import "table.twig" as table_data %}
{{ table_data.datatable() }}    

<div class="row-fluid" align="right">
    <a href="{{ url('commercial_purchasing_account_new') }}" class="btn btn-success btn-small"><i class="icon-plus-sign icon-white"></i> {% trans %}Add new purchasing account{% endtrans %}</a>
</div>
<br />
      
<div class="row-fluid" align="right">
    <table cellpadding="0" cellspacing="0" border="0" class="table table-bordered table-condensed table-striped table-hover" id="table_data">
        <thead>
            <tr>
                <th>{% trans %}Folder name{% endtrans %}</th>
                <th>{% trans %}Actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
           {% for row in customersList %}
                <tr>
                    <td>{{ row.userLabel }}</td>
                    <td  class="{{ row.sold < 0 ? 'negative' : 'positive' }}">{{ row.sold }}</td>
                    <td>
                        <a href="{{ url('commercial_balance_details', {'UserId':row.id}) }}" class="btn btn-mini a-visible-line-on-over">
                            <i class="icon-list"></i> {% trans %}See details{% endtrans %}
                        </a>
                    </td>
                </tr>
          {% endfor %}
        </tbody>
    </table>
</div>
{# End #}

        
{% endblock %}
